<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mvcjava.sagt.javafx.controller.ProductController"
            spacing="15">
    
    <stylesheets>
        <URL value="@styles/mainView.css" />
    </stylesheets>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField promptText="Buscar ...." prefWidth="250" styleClass="searchInput"/>
        <Region HBox.hgrow="ALWAYS" />
                            
            <Button text="Agregar producto" styleClass="btnPrimary" onAction="#handleAddProduct"/>
            <Button text="Eliminar" styleClass="btnDanger" onAction="#handleDeleteProduct"/>
            <Button text="Guardar cambios" styleClass="btnSuccess" onAction="#handleSaveChanges"/>
            <Button text="Recargar" styleClass="btnWarning"/>
            <Button text="Filtrar" styleClass="ghostBtn"/>
    </HBox>

    <TableView fx:id="productsTable" VBox.vgrow="ALWAYS">
        <columns>
        </columns>
    </TableView>
</VBox>